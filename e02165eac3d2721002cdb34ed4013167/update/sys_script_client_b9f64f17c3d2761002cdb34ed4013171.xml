        <name>Map Unit Cost from Catalog</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || newValue === '') {
        return;
    }

    // When the user selects an asset, look up its price in the Catalog table
    g_form.getReference('request_asset', function(assetRecord) {
        // Set the 'cost' field on the request form to match the catalog's 'unit_cost'
        g_form.setValue('cost', assetRecord.unit_cost);
    });
}]]></script>
