        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>Calculate Total Asset Cost</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading) {
    if (isLoading || newValue == '' || newValue <= 0) return;

    // 1. Get the quantity the user typed
    var qty = parseInt(newValue);

    // 2. Get the Asset record selected in the 'request_asset' field
    g_form.getReference('request_asset', function(asset) {
        var unitPrice = parseFloat(asset.unit_cost);
        
        if (!isNaN(unitPrice)) {
            // 3. Calculate and set the Total Cost field
            var total = unitPrice * qty;
            g_form.setValue('total_cost', total);
        }
    });
}]]></script>
